<!--  Spawn single robot on Gazebo -->
<launch>

	<group ns="/robot_1">
	<!--  publish tf and odom, set up base controller -->
		
		<include file="$(find ca_driver)/launch/create_2_experiment.launch" >
			<arg name="robot_name" value="robot_1"/>
		</include>

		<include file="$(find rplidar_ros)/launch/rplidar_experiment.launch"/>

	<!--  run active-mapping -->
		<include file="$(find rrt_exploration_tutorials)/launch/includes/move_baseSafe.launch">
			<arg name="robot_name" value="robot_1"/>
		</include>
	</group>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find rrt_exploration_tutorials)/launch/includes/rviz_config/single_experiment.rviz">
		<remap from="move_base_simple/goal" to="robot_1/move_base_simple/goal"/>
	</node>

</launch>